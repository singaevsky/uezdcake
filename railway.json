{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 3 backend.wsgi:application",
    "healthcheckPath": "/api/health/",
    "healthcheckTimeout": 300
  },
  "environments": {
    "production": {
      "build": {
        "builder": "DOCKERFILE"
      }
    }
  }
}
